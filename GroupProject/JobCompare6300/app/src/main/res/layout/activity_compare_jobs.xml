<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CompareJobsActivity"
    android:background="#96BC92">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="625dp"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/num_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="5"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="6"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="7"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_8"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="8"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_9"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="9"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/num_10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/comp_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company (C)"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_8"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_9"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/comp_10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title, Company"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <CheckBox
                                        android:id="@+id/comp_box1"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box2"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box3"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box4"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box5"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box6"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box7"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box8"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box9"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                    <CheckBox
                                        android:id="@+id/comp_box10"
                                        android:layout_width="match_parent"
                                        android:layout_height="32.5dp"
                                        android:onClick="checkboxCounter" />

                                </LinearLayout>
                            </LinearLayout>

                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="205dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/compare_return"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#081485"
                                android:onClick="onClickReturn"
                                android:text="Return"
                                android:textSize="24sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/compare_compare"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#328514"
                                android:onClick="onClickCompare"
                                android:text="Compare"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>