<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.job.JobOfferActivity"
    android:background="#96BC92">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/offer_jobtitle"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:background="#F8F7F7"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/offer_company"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:background="#F8F7F7"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_city"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_state"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cost of Living Index"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/offer_col_index"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:background="#F8F7F7"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_salary"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Number of Stocks"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_stocks"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Personal Holidays"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_holidays"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bonus"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_bonus"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Home Buying Fund"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_homefund"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Internet Stipend"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/offer_internetstipend"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="#F8F7F7"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="65dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/offer_cancel"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#E61313"
                            android:onClick="onClickCancel"
                            android:text="Cancel"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/offer_ok"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#328514"
                            android:onClick="onClickOk"
                            android:text="OK"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>