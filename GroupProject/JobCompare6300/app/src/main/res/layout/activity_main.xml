<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96BC92"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Compare"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/menu_current_job"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#142165"
                android:fontFamily="sans-serif"
                android:text="Current Job Details"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/menu_add_offer"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#142165"
                android:fontFamily="sans-serif"
                android:text="Add Job Offer"
                android:textSize="24sp"
                android:typeface="normal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/menu_comparison_weights"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#142165"
                android:fontFamily="sans-serif"
                android:text="Edit Comparison Weights"
                android:textSize="24sp"
                android:typeface="normal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/menu_compare_jobs"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#142165"
                android:fontFamily="sans-serif"
                android:text="Compare Jobs"
                android:textSize="24sp"
                android:typeface="normal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/menu_clear_data"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#950303"
                android:fontFamily="sans-serif"
                android:text="Clear All Data"
                android:textSize="24sp"
                android:typeface="normal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>